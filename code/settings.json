{
    // 常规设置
    "editor.wordWrap": "on", // 自动换行
    "editor.fontSize": 13, // 字体大小
    "editor.fontFamily": "JetBrainsMono Nerd Font", // 字体
    "editor.minimap.autohide": true, // 自动隐藏缩略图
    "editor.showFoldingControls": "always", // 总是显示折叠控件，例如可以折叠一个函数
    "editor.cursorBlinking": "smooth", // 光标闪烁
    "editor.mouseWheelZoom": true, //  Ctrl + 鼠标滚轮缩放
    "editor.acceptSuggestionOnEnter": "smart", // 智能回车
    "editor.suggestSelection": "recentlyUsed", // 智能提示选择
    "editor.accessibilitySupport": "auto", // 自动检测使用屏幕辅助功能
    "editor.formatOnSave": false, // 保存时不自动格式化
    "editor.detectIndentation": false, // 禁止自动检测缩进
    "editor.renderWhitespace": "all", // 显示空格
    "editor.guides.bracketPairs": true, // 高亮括号
    "editor.stickyScroll.enabled": false, // 禁止将当前作用域（如函数或类）的标题固定在顶部
    "editor.smoothScrolling": true, // 平滑滚动
    "editor.cursorSmoothCaretAnimation": "on", // 光标动画移动平滑
    "editor.lineNumbers": "relative", // 相对行号
    "workbench.list.smoothScrolling": false, // 文件列表平滑滚动
    "workbench.iconTheme": "material-icon-theme", // 图标主题
    "workbench.startupEditor": "none", // 关闭启动时打开文件
    "workbench.layoutControl.enabled": false, // 关闭布局控制
    "security.workspace.trust.untrustedFiles": "open", // 未受信任文件提示
    "explorer.confirmDelete": false, // 删除文件不提示
    "explorer.confirmDragAndDrop": true, // 拖拽文件不提示
    "outline.collapseItems": "alwaysCollapse", // 折叠大纲视图
    "search.followSymlinks": false, // 搜索时不跟随符号链接
    "files.autoSave": "afterDelay", // 自动保存，onWindowChange
    "files.autoSaveDelay": 2000, // 自动保存延迟
    "files.autoSaveWhenNoErrors": false, // 文件即使有错误，也会保存
    "debug.showBreakpointsInOverviewRuler": true, // 在概览标尺中显示断点
    "breadcrumbs.enabled": false, // 关闭面包屑
    "window.menuBarVisibility": "classic", // 始终显示菜单栏
    "window.enableMenuBarMnemonics": false, // 禁用菜单助记符
    "window.customMenuBarAltFocus": false, // 禁用菜单助记符
    "window.titleBarStyle": "custom",
    "window.dialogStyle": "custom",
    // git 设置
    "git.autorefresh": false, // 关闭自动刷新
    "git.autofetch": true, // 自动获取
    "git.enableSmartCommit": true, // 启用智能提交
    "git.ignoreRebaseWarning": false, // 忽略变基警告
    "git.confirmSync": false, // 同步时不提示
    "git.openRepositoryInParentFolders": "never",
    // jupyter 设置
    "notebook.lineNumbers": "on", // 笔记本行号
    "notebook.output.minimalErrorRendering": true,
    "notebook.output.wordWrap": true,
    "jupyter.askForKernelRestart": false, // 重启内核提示，直接重启内核，不会显示确认提示
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    // 终端设置
    "terminal.integrated.profiles.windows": {
        "NuShell": {
            "path": "D:/nushell/bin/nu.exe",
            "args": [
                "-l"
            ], // 可选：添加启动参数（如 `-l` 启用登录模式）
            "icon": "terminal" // 可选：设置终端图标
        }
    }, // NuShell
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.scrollback": 10000, // 终端滚动条
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.inheritEnv": false, // 关闭继承环境变量，避免与系统环境变量冲突
    "terminal.external.windowsExec": "C:\\Program Files\\WindowsApps\\Microsoft.WindowsTerminal_1.21.10351.0_x64__8wekyb3d8bbwe\\WindowsTerminal.exe",
    "accessibility.verbosity.terminal": false,
    "terminal.integrated.defaultProfile.windows": "Nushell",
    "terminal.integrated.allowChords": false,
    // vscode-neovim 插件设置
    "vscode-neovim.neovimClean": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.win32": "D:\\neovim\\bin\\nvim.exe",
    "vscode-neovim.compositeKeys": {
        "jk": {
            "command": "vscode-neovim.escape"
        }
    },
    "vscode-neovim.ctrlKeysForInsertMode": [
        "a",
        "d",
        "h",
        "j",
        "m",
        "o",
        "r",
        "t",
        "u",
        "w"
    ],
    "vscode-neovim.ctrlKeysForNormalMode": [
        "b",
        "d",
        "e",
        "f",
        "h",
        "i",
        "j",
        "k",
        "l",
        "m",
        "o",
        "r",
        "t",
        "u",
        "v",
        "w",
        "y",
        "z",
        "/",
        "]"
    ],  // 移除a，x键
    // AI 相关设置
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "continue.enableTabAutocomplete": true,
    // 远程连接设置
    "security.allowedUNCHosts": [
        "172.28.141.47"
    ],
    "remote.SSH.remotePlatform": {
        "nhp:ssh": "linux",
        "Server:ssh": "linux"
    },
    // 格式化设置
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right"
    },
    "notebook.outline.showMarkdownHeadersOnly": false,
    "notebook.outline.showCodeCells": true,
    "notebook.outline.showCodeCellSymbols": false,
    "python.defaultInterpreterPath": "/home/nhp/anaconda3/envs/main",
    "workbench.colorTheme": "Default Light Modern",
