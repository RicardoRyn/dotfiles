{
  // 通用
  "editor.wordWrap": "on", // 自动换行
  "editor.fontSize": 12, // 字体大小
  "editor.fontFamily": "Maple Mono NF CN", // 字体
  "editor.fontWeight": "300", // 字体粗细
  // UI
  "editor.minimap.autohide": "mouseover", // 自动隐藏缩略图
  "editor.showFoldingControls": "always", // 总是显示折叠控件，例如可以折叠一个函数
  "editor.cursorBlinking": "smooth", // 光标闪烁
  "editor.renderWhitespace": "all", // 显示空格
  "editor.guides.bracketPairs": true, // 高亮括号
  "editor.smoothScrolling": true, // 平滑滚动
  "editor.cursorSmoothCaretAnimation": "on", // 光标动画移动平滑
  "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${profileName}${separator}${appName}",
  "window.enableMenuBarMnemonics": false, // 禁用菜单栏快捷键
  "window.customMenuBarAltFocus": false, // 禁用菜单栏快捷键
  "window.commandCenter": false, // 禁用命令中心
  "window.titleBarStyle": "custom", // 窗口的标题栏样式设置为"自定义"模式
  "window.dialogStyle": "custom", // 将对话框样式设置为"自定义"模式
  "workbench.colorTheme": "Catppuccin Latte", // 主题
  "workbench.iconTheme": "material-icon-theme", // 图标
  "workbench.layoutControl.enabled": false, // 禁用布局控制功能
  "workbench.list.smoothScrolling": true, // 启用列表平滑滚动
  "workbench.startupEditor": "none", // 启动时的行为为"无"
  "breadcrumbs.enabled": false, // 面包屑
  // 功能
  "editor.mouseWheelZoom": false, //  Ctrl + 鼠标滚轮缩放
  "editor.acceptSuggestionOnEnter": "smart", // 智能回车
  "editor.suggestSelection": "recentlyUsed", // 智能提示选择
  "editor.accessibilitySupport": "off", // 自动检测使用屏幕辅助功能
  "editor.formatOnSave": false, // 保存时不自动格式化
  "editor.stickyScroll.enabled": true, // 将当前作用域（如函数或类）的标题固定在顶部
  "editor.lineNumbers": "on", // 相对行号
  "files.autoSave": "afterDelay", // 自动保存，onWindowChange
  "files.autoSaveDelay": 2000, // 自动保存延迟
  "files.autoSaveWhenNoErrors": false, // 文件即使有错误，也会保存
  "explorer.confirmDelete": false, // 删除文件不提示
  "explorer.confirmDragAndDrop": false, // 始终显示菜单栏
  "search.followSymlinks": false, // 搜索时不跟随符号链接
  "security.workspace.trust.untrustedFiles": "open", // 未受信任文件提示
  // jupyter notebook
  "jupyter.askForKernelRestart": false, // 重启内核提示，直接重启内核，不会显示确认提示
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "notebook.lineNumbers": "on",
  "notebook.output.minimalErrorRendering": true,
  "notebook.output.wordWrap": true,
  "notebook.outline.showCodeCells": true,
  "notebook.outline.showCodeCellSymbols": false,
  // vscode-neovim
  "vscode-neovim.neovimClean": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.compositeKeys": {
    "jk": {
      "command": "vscode-neovim.escape"
    }
  },
  // terminal
  "terminal.integrated.profiles.windows": {
    "NuShell": {
      "path": "C:/Users/RicardoRyn/scoop/shims/nu.exe",
      "args": ["-l"], // 可选：添加启动参数（如 `-l` 启用登录模式）
      "icon": "terminal" // 可选：设置终端图标
    }
  },
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 10000, // 终端滚动条
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.inheritEnv": false, // 关闭继承环境变量，避免与系统环境变量冲突
  "terminal.external.windowsExec": "C:/Users/RicardoRyn/scoop/shims/nu.exe",
  "terminal.integrated.defaultProfile.windows": "NuShell",
  "terminal.integrated.allowChords": false,
  // git
  "git.autorefresh": false, // 关闭自动刷新
  "git.autofetch": true, // 自动获取
  "git.enableSmartCommit": true, // 启用智能提交
  "git.ignoreRebaseWarning": false, // 忽略变基警告
  "git.confirmSync": false, // 同步时不提示
  "git.openRepositoryInParentFolders": "never",
  // python
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "python.defaultInterpreterPath": "e:\\python\\envs\\main\\python.exe",
  "python.analysis.typeCheckingMode": "basic",
  "debug.inlineValues": "off",
  "debug.enableStatusBarColor": false,
  "debug.showBreakpointsInOverviewRuler": true, // 在概览标尺中显示断点
  // json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // lua
  "Lua.runtime.unicodeName": true,
  // ssh
  "security.allowedUNCHosts": ["172.28.141.47"],
  "remote.SSH.remotePlatform": {
    "nhp:ssh": "linux",
    "Server:ssh": "linux"
  },
  // mkdocs yaml
  "yaml.schemas": {
    "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
  },
  "yaml.customTags": [
    "!ENV scalar",
    "!ENV sequence",
    "!relative scalar",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
    "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify mapping"
  ],
  // todo-tree
  "todo-tree.regex.regex": "(//|#|--|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.general.tags": [
    "FIX",
    "TODO",
    "HACK",
    "WARN",
    "PERF",
    "TEST",
    "NOTE",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.customHighlight": {
    "FIX": {
      "foreground": "white",
      "background": "#d20f39",
      "icon": "bug",
      "iconColour": "red"
    }, // 红
    "TODO": {
      "foreground": "white",
      "background": "#f55e44",
      "icon": "check",
      "iconColour": "orange"
    }, // 橙
    "HACK": {
      "foreground": "black",
      "background": "#df8e1d",
      "icon": "zap",
      "iconColour": "yellow"
    }, // 黄
    "WARN": {
      "foreground": "black",
      "background": "#df8e1d",
      "icon": "alert",
      "iconColour": "yellow"
    }, // 黄
    "PERF": {
      "foreground": "white",
      "background": "#6a2cbc",
      "icon": "pulse",
      "iconColour": "purple"
    }, // 紫
    "TEST": {
      "foreground": "white",
      "background": "#04a5e5",
      "icon": "beaker",
      "iconColour": "blue"
    }, // 蓝
    "NOTE": {
      "foreground": "white",
      "background": "#179299",
      "icon": "note",
      "iconColour": "green"
    } // 绿
  },
  // better-comments
  "better-comments.tags": [
    {
      "tag": "FIX",
      "color": "#d20f39", // 红
      "bold": true
    },
    {
      "tag": "TODO",
      "color": "#df8e1d", // 橙
      "bold": true
    },
    {
      "tag": "HACK",
      "color": "#df8e1d", // 黄
      "italic": true
    },
    {
      "tag": "WARN",
      "color": "#df8e1d", // 黄
      "italic": true
    },
    {
      "tag": "PERF",
      "color": "#6a2cbc" // 紫
    },
    {
      "tag": "TEST",
      "color": "#04a5e5" // 蓝
    },
    {
      "tag": "NOTE",
      "color": "#179299" // 绿
    }
  ],
  // ai
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "Lingma.aI Chat.webToolsInAsk/AgentMode": "Auto-execute",
  // html
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // misc
  "redhat.telemetry.enabled": false,
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}