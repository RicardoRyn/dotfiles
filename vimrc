colorscheme ron
syntax on
filetype indent on
filetype plugin on

set autoindent
set autowrite
set autochdir
set backupcopy=yes
set backspace=indent,eol,start
set cursorcolumn
set cursorline
set cmdheight=1
set guioptions-=T
set guioptions-=m
set hlsearch
set hidden
set incsearch
set ignorecase smartcase 
set laststatus=2
set matchtime=2
set magic
set nobackup
set noerrorbells
set novisualbell
set shiftwidth=4
set softtabstop=4
set showmatch
set smartindent
set showcmd
set tabstop=4
set t_vb=
set wrap

imap jk <Esc>
vmap jk <Esc>
nmap j gj
nmap k gk
nmap <Space>h :nohl<CR>

